.buy-container__logo
  =link_to root_path do
    =image_tag "mercari_logo_horizontal.png"
%h2 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'session-form'}) do |f|
  .field
    = f.label 'メールアドレス'
    %br
    = f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'session-form__email'
  .field
    = f.label 'パスワード'
    %br
    = f.password_field :password, placeholder: 'パスワード', class: 'session-form__password'
  = recaptcha_tags
  .actions
    = f.submit "ログイン", class: 'session-form__btn'

= render 'products/buy-footer'
