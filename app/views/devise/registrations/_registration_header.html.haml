.registration-header
  .buy-container__logo
    = link_to root_path do
      = image_tag "mercari_logo_horizontal.png"
  .registration-step
    .registration-step__user-info
      %p 会員情報
      = fa_icon 'circle'
    .registration-step__verify
      %p 電話番号認証
      = fa_icon 'circle'
      .step-line
    .registration-step__delivery
      %p お届け先住所入力
      = fa_icon 'circle'
      .step-line
    .registration-step__payment
      %p 支払い方法
      = fa_icon 'circle'
      .step-line
    .registration-step__done
      %p 完了
      = fa_icon 'circle'
      .step-line
